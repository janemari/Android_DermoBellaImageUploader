<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_button_main</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="buttonWhite">
        <item name="android:textColor">@color/BLACK</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_button_white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="edit_text_style">
        <item name="android:textColor">@color/BLACK</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:background">@drawable/selector_edit_base_white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- For activities -->
    <style name="Theme.AppCompat.Light.NoTitle" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="dialogTheme">@style/Theme_AppCompat_Light_Dialog_HasTitle</item>-->
        <!--<item name="android:dialogTheme">@style/Theme_AppCompat_Light_Dialog_HasTitle</item>-->
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="windowNoTitle">false</item>
    </style>

    <!-- For activities that are displayed like a dialog -->
    <style name="Theme.AppCompat.Light.Dialog.NoTitle" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>