<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/optic_number"
        android:gravity="start|center"
        android:textColor="@color/BLACK"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_1"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_3"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_OpticNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/edit_text_style"
        android:hint="@string/enter_optic_number"
        android:gravity="start|center"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_3"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/enter_optic_number_label"
        android:gravity="start|center"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_3"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_4"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/device_optional"
        android:gravity="start|center"
        android:textColor="@color/BLACK"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_1"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_4"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_5"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_SSID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/edit_text_style"
        android:hint="@string/enter_ssid_serial_number"
        android:gravity="start|center"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_4"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_5"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/enter_ssid_serial_number_label"
        android:gravity="start|center"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_5"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_6"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bm_id"
        android:gravity="start|center"
        android:textColor="@color/BLACK"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_1"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_6"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_7"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_BMID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/edit_text_style"
        android:hint="@string/enter_email_address_phone_number"
        android:gravity="start|center"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_6"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_7"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/asterisk_mark"
        android:textColor="@color/RED"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_6"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_7"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/enter_email_address_phone_number_label"
        android:gravity="start|center"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_7"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_8"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/confirm_bm_id"
        android:gravity="start|center"
        android:textColor="@color/BLACK"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_1"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_8"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_9"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_ConfirmBMID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/edit_text_style"
        android:hint="@string/enter_email_address_phone_number"
        android:gravity="start|center"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_8"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_9"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/asterisk_mark"
        android:textColor="@color/RED"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_8"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_9"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/brand_optional"
        android:gravity="start|center"
        android:textColor="@color/BLACK"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_1"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_10"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_11"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_BrandName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/edit_text_style"
        android:hint="@string/enter_brand_name"
        android:gravity="start|center"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_10"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_11"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/button"
        android:text="@string/close"
        android:textAllCaps="false"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/btnSend"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_bottom"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/button"
        android:text="@string/send"
        android:textAllCaps="false"
        android:padding="10dp"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_bottom"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/colon_mark"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_2"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_3"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/asterisk_mark"
        android:textColor="@color/RED"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_3"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/colon_mark"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_2"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_4"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_5"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/colon_mark"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_2"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_6"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_7"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/colon_mark"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_2"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_10"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_11"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.01"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.11"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.20"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.30"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.39"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.49"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.60"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.72"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.74"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.85"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.98"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.30"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.38"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>